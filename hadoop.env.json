{
    "CORE": {
        "fs.defaultFS": "hdfs://hadoop.name:8020",
        "hadoop.tmp.dir": "/data/hadoop/tmp",
        "fs.trash.interval": "1440"
    },

    "HDFS": {
        "dfs.namenode.name.dir": "file:///data/hadoop/name",
        "dfs.namenode.checkpoint.dir": "file:///data/hadoop/namesecondary",
        "dfs.namenode.secondary.http-address": "hadoop.name:8021",
        "dfs.datanode.data.dir": "file:///data/hadoop/data",
        "dfs.datanode.max.transfer.threads": "4096",
        "dfs.replication": "2",
        "dfs.webhdfs.enabled": "true",
        "dfs.permissions.enabled": "false"
    },

    "YARN": {
        "yarn.nodemanager.aux-services": "mapreduce_shuffle",
        "yarn.nodemanager.remote-app-log-dir": "/app-logs",
        "yarn.nodemanager.resource.memory-mb": "2048",
        "yarn.nodemanager.resource.cpu-vcores": "2",
        "yarn.nodemanager.pmem-check-enabled": "false",
        "yarn.nodemanager.vmem-check-enabled": "false",
        "yarn.resourcemanager.hostname": "hadoop.resourcemanager",
        "yarn.resourcemanager.address": "hadoop.resourcemanager:8032",
        "yarn.resourcemanager.scheduler.address": "hadoop.resourcemanager:8030",
        "yarn.resourcemanager.resource-tracker.address": "hadoop.resourcemanager:8031",
        "yarn.resourcemanager.admin.address": "hadoop.resourcemanager:8033",
        "yarn.resourcemanager.webapp.address": "hadoop.resourcemanager:8088",
        "yarn.scheduler.maximum-allocation-mb": "2048",
        "yarn.scheduler.maximum-allocation-vcores": "2",
        "yarn.log-aggregation-enable": "true",
        "yarn.log.server.url": "http://hadoop.mrjobhistoryserver:19888/jobhistory/logs",
        "yarn.timeline-service.enabled": "true",
        "yarn.system-metrics-publisher.enabled": "true",
        "yarn.timeline-service.generic-application-history.enabled": "true",
        "yarn.timeline-service.hostname": "hadoop.historyserver",
        "yarn.app.mapreduce.am.staging-dir": "/mr"
    },
    
    "MAPRED": {
        "mapreduce.framework.name": "yarn",
        "mapreduce.jobhistory.address": "hadoop.mrjobhistoryserver:10020",
        "mapreduce.jobhistory.webapp.address": "hadoop.mrjobhistoryserver:19888",
        "mapreduce.jobhistory.done-dir": "${yarn.app.mapreduce.am.staging-dir}/history/done",
        "mapreduce.jobhistory.intermediate-done-dir": "${yarn.app.mapreduce.am.staging-dir}/history/done_intermediate",
        "mapreduce.map.log.level": "DEBUG",
        "mapreduce.reduce.log.level": "DEBUG"
    }
}